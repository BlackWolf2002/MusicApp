<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/imageBackgroundBanner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/poster"/>
<!--    <View-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="200dp"/>-->
    <RelativeLayout
        android:id="@+id/relativel"
        android:layout_alignBottom="@+id/imageBackgroundBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/imageViewBanner"
            android:padding="2dp"
            android:src="@drawable/theremix2014"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
        <TextView
            android:id="@+id/textViewTitleBaiHat"
            android:textColor="#DDDBDB"
            android:text="I Know You Know"
            android:textSize="17sp"
            android:layout_toRightOf="@+id/imageViewBanner"
            android:layout_alignTop="@+id/imageViewBanner"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/textViewTitleBaiHat"
            android:layout_toRightOf="@+id/imageViewBanner">
            <TextView
                android:id="@+id/noiDungBaiHat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chào mừng bạn đến với bài hát hot nhất hiện nay"
                android:maxLines="2"
                android:textSize="13sp"
                android:layout_marginRight="40dp"
                android:textColor="@color/cardview_light_background"/>


        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>